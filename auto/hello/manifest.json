{
  "name": "自动插件",
  "manifest_version": 2,
  "version": "2.2",
  "description": "自动化插件，注入auto代码",
  "browser_action": {
      "default_title": "自动化插件，注入auto代码",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
   "content_scripts": [{  
         "matches": ["http://*/*","https://*/*"],   
         "js": ["myscript.js"] 
    }],  
    "permissions": [     
     "tabs", "http://*/*","https://*/*"    
    ]     
}